<div class="card mb-2">
  <div class="card-body">
    <div class="mb-1">
      <%= link_to task.title, task_path(task.id), class: "card-title", style: "font-size: 20px;" %>
    </div>

    <h6 class="card-subtitle mb-2 text-muted">
      <%= task.priority %>
      | <%= task.due_date.strftime("%d/%m/%y %H:%M") %>
    </h6>

    <p class="card-text" style="font-size: 14px;"><%= task.description %></p>

    <div>
      <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-person-fill align-middle" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
        <path fill-rule="evenodd" d="M3 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H3zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6z"/>
      </svg>
      <span class="align-middle">
        <%= link_to task.responsible.name, responsible_path(task.responsible.id) %>
      </span>
    </div>
  </div>
</div>