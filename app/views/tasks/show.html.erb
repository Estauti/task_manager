<p id="notice"><%= notice %></p>

<h2><%= @task.title %></h2>

<div class="mt-3">
  <p>
  <strong>Description:</strong>
  <%= @task.description %>
</p>

<p>
  <strong>Due date:</strong>
  <%= @task.due_date %>
</p>

<p>
  <strong>Priority:</strong>
  <%= @task.priority %>
</p>

<p>
  <strong>Status:</strong>
  <%= @task.status %>
</p>
</div>

<div class="mt-5">
  <%= link_to 'Edit', edit_task_path(@task), class: "btn btn-primary mr-2" %>
  <%= link_to 'Back', tasks_path %>
</div>
